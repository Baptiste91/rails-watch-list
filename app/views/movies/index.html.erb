<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">Baptiste Cinema</a><i class="material-icons">movie</i>

  <div class="collapse navbar-collapse">
    <form class="flex ml-auto">
      <input class="form-control" name="query" type="search" placeholder="Search" aria-label="Search" value="<%= params[:query] %>">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="flex ml-auto">
      <%= link_to "Add new list", new_list_path, class: 'btn btn-outline-primary my-2 my-sm-0 ml-2' %>
    </div>
  </div>
</nav>

<div class="container mt-5">
  <div class="row ml-1 mb-5">
    <h1>All my Movies (<%= @movies.count %>)</h1>
  </div>
  <div class="row mb-5">
    <% @movies.each do |movie| %>
      <div class="col-sm-12 col-md-6 col-lg-4">
          <div class="card-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= movie.poster_url %>')">
           <p><%= movie.title %></p>
          </div>
      </div>
    <% end %>
  </div>
</div>

<div class="text-center w-50 ml-auto mr-auto fixed-bottom">
<%= link_to "Create new list", new_list_path, class: 'btn btn-outline-alert mt-3 mb-1' %>
</div>
