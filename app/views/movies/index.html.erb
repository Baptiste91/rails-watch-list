<%= render "lists/navbar" %>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://s3-us-west-2.amazonaws.com/prd-rteditorial/wp-content/uploads/2018/03/13153742/RT_300EssentialMovies_700X250.jpg'); position: relative;">
  <div class="container">
    <% if @present.present? %>
      <h1 style="font-family: 'Fascinate', cursive;">Movies corresponding to the search</h1>
    <% else %>
      <h1 style="font-family: 'Fascinate', cursive;">All movies</h1>
    <% end %>
    <% if @movies.count == 1 %>
      <p><%= @movies.count %> Movie</p>
    <% else %>
      <p><%= @movies.count %> Movies</p>
    <% end %>
  </div>
  <%= link_to "Add a new movie to the database", new_movie_path, class: 'btn btn-outline-light mt-3', style: 'position: absolute; bottom: 20px; right: 20px;' %>
</div>

<div class="container mt-5 addflat">
  <form class="flex mr-5 ml-5" style="width: 400px">
    <input class="form-control mr-1" name="query" type="search" placeholder="Name of a movie" aria-label="Search" value="<%= params[:query] %>" style="background-color: #141414;">
    <button class="btn btn-outline-light" type="submit">Search</button>
  </form>
</div>

<div class="container mt-5">
  <div class="row mb-5">
    <% @movies.each do |movie| %>
      <div class="col-sm-12 col-md-6 col-lg-4">
          <div class="card-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= movie.poster_url %>')">
           <p><%= movie.title %></p>
          </div>
      </div>
    <% end %>
  </div>
</div>


