<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">Baptiste Cinema</a><i class="material-icons">movie</i>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="flex ml-auto">
      <%= link_to "See all movies", movies_path, class: 'btn btn-outline-success my-2 my-sm-0 ml-2' %>
    </div>
  </div>
  <div>
    <div class="ml-auto flex">
      <%= link_to "Add new list", new_list_path, class: 'btn btn-outline-primary my-2 my-sm-0 ml-2' %>
    </div>
  </div>
</nav>

<div class="container mt-5 addflat">
  <div class="row">
    <div class="col">
      <h1>Add a new movie to the database</h1>

      <%= simple_form_for @movie do |f| %>
        <%= f.input :title %>
        <%= f.input :overview %>
        <%= f.input :rating %>
        <%= f.input :poster_url %>
        <%= f.submit class: 'btn btn-outline-primary mt-3' %>
      <% end %>
      <%= link_to "Cancel", lists_path, class: 'btn btn-outline-danger mt-3' %>
    </div>
  </div>
</div>
