<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">Baptiste Cinema</a><i class="material-icons">movie</i>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="ml-auto flex">
      <%= link_to "Add new list", new_list_path, class: 'btn btn-outline-primary my-2 my-sm-0 ml-2' %>
    </div>
  </div>
</nav>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @list.photo.attachment == nil ? 'https://source.unsplash.com/random' : (cl_image_path @list.photo.key, crop: :fill) %>');">
  <div class="container">
    <h1><%= @list.name %></h1>
    <p><%= @list.movies.count %> movies</p>
  </div>
</div>

<div class="text-center w-50 ml-auto mr-auto">
  <%= link_to "Add a movie to the list", new_list_bookmark_path(@list), class: 'btn btn-outline-success btn-lg btn-block mt-3' %>
</div>

<div class="container mt-5">
  <div class="row mb-5">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-sm-12 col-md-6 col-lg-4">
          <div class="flat-card">
            <div class="flat-card-image" style="background-image: url('<%= bookmark.movie.poster_url %>')"></div>
            <div class="flat-card-content">
              <div class="flat-card-title">
                <h4><%= bookmark.movie.title %> <span>- <%= bookmark.movie.rating %></span> <i class="fas fa-star"></i></h4>
              </div>
              <p><%= bookmark.movie.overview %></p>
            </div>
            <div class="flat-card-actions">
              <p><i class="material-icons">format_quote</i><%= bookmark.comment%></p>
              <div><%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-danger' %>
              </div>
            </div>
          </div>
      </div>
    <% end %>
  </div>
</div>

<div class="text-center w-50 ml-auto mr-auto">
<%= link_to "Back to Lists", lists_path, class: 'btn btn-outline-alert mt-3 mb-5' %>
</div>





    <!-- Button trigger modal -->
  <div class="d-flex justify-content-center mt-3">
    <button type="button" class="text-decoration-none btn btn-outline-secondary btn-black" data-toggle="modal" data-target="#exampleModal">
      Contact me !
    </button>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Send me a message</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <label for="message-text" class="col-form-label">Message:</label>
              <textarea class="form-control" id="message-text"></textarea>
          </div>
          </form>
        </div>
        <div class="modal-footer">
          <a class="text-decoration-none nav-link" data-dismiss="modal">Close</a>
          <button type="button" class="btn btn-outline-secondary btn-black" data-dismiss="modal">Send</button>
        </div>
      </div>
    </div>
  </div>
