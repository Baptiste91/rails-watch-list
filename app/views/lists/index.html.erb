<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">Baptiste Cinema</a><i class="material-icons">movie</i>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="ml-auto flex">
      <%= link_to "Add new list", new_list_path, class: 'btn btn-outline-primary my-2 my-sm-0 ml-2' %>
    </div>
  </div>
</nav>

<div class="container mt-5">
  <div class="row mb-5">
    <h1>All my Lists (<%= @lists.count %>)</h1>
  </div>
  <div class="row mb-5">
    <% @lists.each do |list| %>
      <div class="col-4">
          <div class="card-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.photo.attachment == nil ? list.bookmarks.first.movie.poster_url : (cl_image_path list.photo.key, cloud_name: 'dqlcs3fyh', crop: :fill) %>')">
            <%= link_to list.name, list_path(list), class: 'mr-3 text-light' %>
          </div>
      </div>
    <% end %>
  </div>
</div>


