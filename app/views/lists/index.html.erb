<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">Baptiste Cinema</a><i class="material-icons">movie</i>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="ml-auto flex">
      <%= link_to "Add new list", new_list_path, class: 'btn btn-outline-primary my-2 my-sm-0 ml-2' %>
    </div>
  </div>
</nav>

<div class="container mt-5">
  <div class="row ml-1 mb-5">
    <h1>All my Lists (<%= @lists.count %>)</h1>
  </div>
  <div class="row mb-5">
    <% @lists.each do |list| %>
      <div class="col-sm-12 col-md-6 col-lg-4">
        <%= link_to list_path(list) do %>
          <div class="card-category mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.photo.attachment == nil ? 'https://source.unsplash.com/random' : (cl_image_path list.photo.key, crop: :fill) %>')">
           <p><%= list.name %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="text-center w-50 ml-auto mr-auto fixed-bottom">
<%= link_to "Create new list", new_list_path, class: 'btn btn-outline-alert mt-3 mb-1' %>
</div>


